<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="mb-4">Nueva contraseña</h3>
            <form action="" method="post">

                <div class="form-group mb-2">
                    <div class="input-group">
                        <span class="input-group-text bg-dark text-light">
                            <i class="bi bi-person"></i>
                        </span>
                        <input name="email" class="form-control" type="text" placeholder="Email">
                    </div>
                </div>

                <div class="form-group mb-2">
                    <div class="input-group">
                        <span class="input-group-text bg-dark text-light">
                            <i class="bi bi-lock"></i>
                        </span>
                        <input name="password1" class="form-control" type="password" placeholder="Nueva contraseña">
                    </div>
                </div>

                <div class="form-group mb-2">
                    <div class="input-group">
                        <span class="input-group-text bg-dark text-light">
                            <i class="bi bi-lock"></i>
                        </span>
                        <input name="password2" class="form-control" type="password" placeholder="Confirmar nueva contraseña">
                    </div>
                </div>

                {{#if error}}
                <div class="form-group">
                    <div class="input-group">
                        <span class="text-danger">{{error}}</span>
                    </div>
                </div>
                {{/if}}

                <button class="btn btn-primary">Cambiar</button>
            </form>
        </div>
    </div>
</div>