<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="mb-4">Registra tu cuenta</h3>
            <form action="" method="post">

                <div class="form-group mb-2">
                    <input name="firstname" class="form-control" type="text" placeholder="Nombre">
                </div>

                <div class="form-group mb-2">
                    <input name="lastname" class="form-control" type="text" placeholder="Apellido">
                </div>

                <div class="form-group mb-2">
                    <input name="email" class="form-control" type="text" placeholder="Email">
                </div>

                <div class="form-group mb-2">
                    <input name="age" class="form-control" type="text" placeholder="Edad">
                </div>

                <div class="form-group mb-2">
                    <select name="gender" class="form-control">
                        <option>Hombre</option>
                        <option>Mujer</option>
                    </select>
                </div>

                <div class="form-group mb-2">
                    <input name="password" class="form-control" type="password" placeholder="Contraseña">
                </div>

                <div class="form-group mb-2">
                    <input name="password2" class="form-control" type="password" placeholder="Confirma Contraseña">
                </div>

                <div class="form-group mb-2">
                    <span>Ya creaste una cuenta?<a href="/login" class="mx-1">Inicia sesión!</a></span>
                </div>

                {{#if message}}
                <div class="form-group mb-2">
                    <div class="input-group">
                        <span class="text-danger">{{message}}</span>
                    </div>
                </div>
                {{/if}}

                <button class="btn btn-dark">Registrarse</button>
            </form>
        </div>
    </div>
</div>