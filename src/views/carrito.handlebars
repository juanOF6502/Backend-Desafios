<div class="container mt-5 mb-5">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title text-center">Detalle del Carrito</h5>
            <ul class="list-group">
                {{#each products}}
                    <li class="list-group-item bg-dark text-light d-flex justify-content-between align-items-start w-50 mx-auto rounded">
                        <span><strong>{{this.product.title}}</strong></span>
                        <span>Precio: ${{this.product.price}}</span>
                        <span>Cantidad: <strong>{{this.qty}}</strong></span>
                    </li>
                {{/each}}
            </ul>
            <p class="text-center p-1 mt-3 mx-auto bg-dark w-25 text-light rounded">Total: ${{total}}</p>
        </div>
    </div>
    <button class="btn btn-success rounded mt-3"><a href="/cart/purchase" class="nav-link">Finalizar compra</a></button>
</div>