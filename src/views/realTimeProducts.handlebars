<div id="product-form" class="row mx-auto mb-5">
    <div class="col-md-3">
        <form id="delete-product-form" onsubmit="deleteProduct(event)">
            <h4>Borrar Producto</h4>
            <input class="form-control" type="number" id="product-id" placeholder="ID del producto" required>
            <button type="submit" class="btn btn-danger mt-2 rounded">Borrar</button>
        </form>
    </div>
</div>
<div id="products" class="row">
        {{#each products}}
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card mb-5 box-shadow">
                <img src="static/img/{{this.thumbnail}}" alt="imagen" class="card-img-top card-img-custom">
                <div class="card-body">
                    <h3 class="card-title">{{ this.title }}</h3>
                    <div class="d-flex flex-wrap"> 
                        {{#each this.category}}
                            <p class="text-light bg-info rounded mx-1 px-2 fs-6">{{ this }}</p>
                        {{/each}}
                    </div>
                    <h5>USD ${{ this.price }}</h5>
                    <p>{{ this.description }}</p>
                    <button onclick="addToCart({{ this.id }})" class="btn btn-dark btn-sm">Agregar al carrito</button>
                </div>
            </div>
        </div>
        {{/each}}
</div>


<script src="/socket.io/socket.io.js"></script>
<script src="/static/js/index.js"></script>
